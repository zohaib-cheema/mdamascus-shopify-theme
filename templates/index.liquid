<script>
document.addEventListener('DOMContentLoaded', function() {
  const productsScroll = document.querySelector('.products-scroll');
  const scrollLeftBtn = document.querySelector('.scroll-left');
  const scrollRightBtn = document.querySelector('.scroll-right');
  
  if (productsScroll && scrollLeftBtn && scrollRightBtn) {
    const scrollAmount = 300; // Width of one product card + gap
    
    // Update button states based on scroll position
    function updateScrollButtons() {
      const isAtStart = productsScroll.scrollLeft <= 0;
      const isAtEnd = productsScroll.scrollLeft >= (productsScroll.scrollWidth - productsScroll.clientWidth);
      
      scrollLeftBtn.disabled = isAtStart;
      scrollRightBtn.disabled = isAtEnd;
    }
    
    // Scroll left
    scrollLeftBtn.addEventListener('click', function() {
      productsScroll.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
    });
    
    // Scroll right
    scrollRightBtn.addEventListener('click', function() {
      productsScroll.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    });
    
    // Update buttons on scroll
    productsScroll.addEventListener('scroll', updateScrollButtons);
    
    // Initial state
    updateScrollButtons();
    
    // Hide scroll buttons on mobile
    function handleResize() {
      if (window.innerWidth <= 768) {
        scrollLeftBtn.style.display = 'none';
        scrollRightBtn.style.display = 'none';
      } else {
        scrollLeftBtn.style.display = 'flex';
        scrollRightBtn.style.display = 'flex';
      }
    }
    
    window.addEventListener('resize', handleResize);
    handleResize();
  }
});
</script>