<script>
document.addEventListener('DOMContentLoaded', function() {
  // Hero Slideshow
  const slides = document.querySelectorAll('.hero-slide');
  const dots = document.querySelectorAll('.dot');
  const prevBtn = document.querySelector('.arrow-prev');
  const nextBtn = document.querySelector('.arrow-next');
  let currentSlide = 0;
  let slideInterval;

  function showSlide(index) {
    // Remove active class from all slides and dots
    slides.forEach(slide => slide.classList.remove('active', 'prev'));
    dots.forEach(dot => dot.classList.remove('active'));

    // Add active class to current slide and dot
    slides[index].classList.add('active');
    dots[index].classList.add('active');

    // Add prev class to previous slide for smooth transition
    if (index > 0) {
      slides[index - 1].classList.add('prev');
    } else {
      slides[slides.length - 1].classList.add('prev');
    }

    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % slides.length;
    showSlide(next);
  }

  function prevSlide() {
    const prev = currentSlide === 0 ? slides.length - 1 : currentSlide - 1;
    showSlide(prev);
  }

  function startSlideshow() {
    slideInterval = setInterval(nextSlide, 4500); // Change slide every 4.5 seconds
  }

  function stopSlideshow() {
    clearInterval(slideInterval);
  }

  // Event listeners
  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      stopSlideshow();
      nextSlide();
      startSlideshow();
    });
  }

  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      stopSlideshow();
      prevSlide();
      startSlideshow();
    });
  }

  // Dot navigation
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      stopSlideshow();
      showSlide(index);
      startSlideshow();
    });
  });

  // Pause slideshow on hover
  const heroSection = document.querySelector('.hero-section');
  if (heroSection) {
    heroSection.addEventListener('mouseenter', stopSlideshow);
    heroSection.addEventListener('mouseleave', startSlideshow);
  }

  // Start slideshow
  startSlideshow();

  // Products Scroll
  const productsScroll = document.querySelector('.products-scroll');
  const scrollLeftBtn = document.querySelector('.scroll-left');
  const scrollRightBtn = document.querySelector('.scroll-right');
  
  if (productsScroll && scrollLeftBtn && scrollRightBtn) {
    const scrollAmount = 300; // Width of one product card + gap
    
    // Update button states based on scroll position
    function updateScrollButtons() {
      const isAtStart = productsScroll.scrollLeft <= 0;
      const isAtEnd = productsScroll.scrollLeft >= (productsScroll.scrollWidth - productsScroll.clientWidth);
      
      scrollLeftBtn.disabled = isAtStart;
      scrollRightBtn.disabled = isAtEnd;
    }
    
    // Scroll left
    scrollLeftBtn.addEventListener('click', function() {
      productsScroll.scrollBy({
        left: -scrollAmount,
        behavior: 'smooth'
      });
    });
    
    // Scroll right
    scrollRightBtn.addEventListener('click', function() {
      productsScroll.scrollBy({
        left: scrollAmount,
        behavior: 'smooth'
      });
    });
    
    // Update buttons on scroll
    productsScroll.addEventListener('scroll', updateScrollButtons);
    
    // Initial state
    updateScrollButtons();
    
    // Hide scroll buttons on mobile
    function handleResize() {
      if (window.innerWidth <= 768) {
        scrollLeftBtn.style.display = 'none';
        scrollRightBtn.style.display = 'none';
      } else {
        scrollLeftBtn.style.display = 'flex';
        scrollRightBtn.style.display = 'flex';
      }
    }
    
    window.addEventListener('resize', handleResize);
    handleResize();
  }
});
