    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 107, 53, 0.5);
    transform: translateY(-2px);
  }

  .hero-features {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .feature-icon {
    width: 20px;
    height: 20px;
    color: #FF6B35;
