{% comment %}
  Modern Homepage Template for MDamascus
{% endcomment %}

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-background">
    <div class="hero-particles"></div>
    <div class="hero-gradient"></div>
  </div>
  
  <div class="page-width">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title animate-fade-in-up" style="animation-delay: 0.1s;">
          <span class="title-line">Welcome to</span>
          <span class="title-line title-highlight">
            <span class="title-text">M Damascus</span>
            <span class="title-glow"></span>
          </span>
        </h1>
        
        <p class="hero-subtitle animate-fade-in-up" style="animation-delay: 0.2s;">
          Discover premium quality products crafted with passion and precision. 
          Experience the perfect blend of tradition and innovation in every piece.
        </p>
        
        <div class="hero-actions animate-fade-in-up" style="animation-delay: 0.3s;">
          <a href="{{ collections.all.url }}" class="btn btn-primary">
            <span class="btn-text">Shop Collection</span>
            <span class="btn-icon">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
            <div class="btn-ripple"></div>
          </a>
          
          <a href="#featured" class="btn btn-secondary">
            <span class="btn-text">Explore</span>
            <div class="btn-shine"></div>
          </a>
        </div>
        
        <div class="hero-stats animate-fade-in-up" style="animation-delay: 0.4s;">
          <div class="stat-item">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Happy Customers</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Premium Products</div>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Support</div>
          </div>
        </div>
      </div>
      
      <div class="hero-visual">
        <!-- Elegant Product Showcase -->
        <div class="elegant-showcase">
          <!-- Main Product Display -->
          <div class="product-display">
            <div class="product-frame">
              <div class="product-image">
                <div class="product-glow"></div>
                <div class="product-pattern"></div>
              </div>
              <div class="product-badge">
                <span class="badge-text">HANDCRAFTED</span>
              </div>
            </div>
          </div>
          
          <!-- Feature Highlights -->
          <div class="feature-highlights">
            <div class="highlight-item highlight-1">
              <div class="highlight-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z" fill="currentColor"/>
                </svg>
              </div>
              <div class="highlight-content">
                <h4>Premium Quality</h4>
                <p>Master craftsmanship</p>
              </div>
            </div>
            
            <div class="highlight-item highlight-2">
              <div class="highlight-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 2C6.48 2 2 6.48 2 12S6.48 22 12 22S22 17.52 22 12S17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12S7.59 4 12 4S20 7.59 20 12S16.41 20 12 20Z" fill="currentColor"/>
                  <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="highlight-content">
                <h4>Fast Delivery</h4>
                <p>Worldwide shipping</p>
              </div>
            </div>
            
            <div class="highlight-item highlight-3">
              <div class="highlight-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="highlight-content">
                <h4>24/7 Support</h4>
                <p>Always here to help</p>
              </div>
            </div>
          </div>
          
          <!-- Elegant Accents -->
          <div class="elegant-accents">
            <div class="accent-line accent-1"></div>
            <div class="accent-line accent-2"></div>
            <div class="accent-dot accent-3"></div>
            <div class="accent-dot accent-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
  <div class="page-width">
    <div class="stats-grid">
      <div class="stat-item animate-fade-in-up">
        <div class="stat-number">1000+</div>
        <div class="stat-label">Happy Customers</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.1s;">
        <div class="stat-number">50+</div>
        <div class="stat-label">Premium Products</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="stat-number">24/7</div>
        <div class="stat-label">Customer Support</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.3s;">
        <div class="stat-number">100%</div>
        <div class="stat-label">Satisfaction</div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section id="featured" class="featured-section">
  <div class="page-width">
    <div class="section-header">
      <h2 class="section-title">Featured Products</h2>
      <p class="section-subtitle">Discover our most popular and highly-rated products</p>
    </div>
    
    <div class="products-grid">
      {%- assign featured_collection = collections.all -%}
      {%- if collections.featured.products.size > 0 -%}
        {%- assign featured_collection = collections.featured -%}
      {%- endif -%}
      {%- for product in featured_collection.products limit: 6 -%}
        <div class="product-card animate-fade-in-up" style="animation-delay: {{ forloop.index0 | times: 0.1 }}s;">
          <div class="product-image">
            {%- if product.featured_media -%}
              <a href="{{ product.url }}">
                <img
                  src="{{ product.featured_media | image_url: width: 400 }}"
                  alt="{{ product.featured_media.alt | escape }}"
                  loading="lazy"
                >
              </a>
            {%- endif -%}
            
            <div class="product-badges">
              {%- if product.compare_at_price > product.price -%}
                <span class="badge badge--sale">Sale</span>
              {%- endif -%}
              {%- if product.tags contains 'new' -%}
                <span class="badge badge--new">New</span>
              {%- endif -%}
            </div>
            
            <div class="product-actions">
              <button class="product-action-btn" data-product-id="{{ product.id }}">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18Z" stroke="currentColor" stroke-width="2"/>
                  <path d="M10 6V10L13 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
              <a href="{{ product.url }}" class="product-action-btn">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M1 1H3L3.4 3M5 11H15L19 3H3.4M5 11L3.4 3M5 11L2.7 13.3C2.3 13.7 2.6 14.5 3.1 14.5H15M15 11V17C15 17.6 14.6 18 14 18H6C5.4 18 5 17.6 5 17V11M15 11H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </div>
          
          <div class="product-info">
            <h3 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            
            <div class="product-price">
              {%- if product.compare_at_price > product.price -%}
                <span class="price price--sale">{{ product.price | money }}</span>
                <span class="price price--compare">{{ product.compare_at_price | money }}</span>
              {%- else -%}
                <span class="price">{{ product.price | money }}</span>
              {%- endif -%}
            </div>
            
            <div class="product-rating">
              <div class="stars">
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
                <span class="star">★</span>
              </div>
              <span class="rating-count">({{ product.metafields.reviews.rating_count | default: '24' }})</span>
            </div>
          </div>
        </div>
      {%- endfor -%}
      
      {%- if featured_collection.products.size == 0 -%}
        <div class="no-products-message">
          <div class="no-products-icon">
            <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
              <path d="M32 8C18.745 8 8 18.745 8 32S18.745 56 32 56S56 45.255 56 32S45.255 8 32 8ZM32 52C21.523 52 12 42.477 12 32S21.523 12 32 12S52 21.523 52 32S42.477 52 32 52Z" fill="currentColor"/>
              <path d="M32 20V32L40 36" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Products Coming Soon</h3>
          <p>We're preparing amazing products for you. Check back soon!</p>
        </div>
      {%- endif -%}
    </div>
    
    {%- if featured_collection.products.size > 0 -%}
      <div class="section-footer">
        <a href="{{ featured_collection.url }}" class="button button--secondary">
          View All Products
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<!-- Features Section -->
<section class="features-section">
  <div class="page-width">
    <div class="features-grid">
      <div class="feature-item animate-fade-in-left">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4L30.09 15.26L42 17.27L33 26.14L35.18 38.02L24 32.77L12.82 38.02L15 26.14L6 17.27L17.91 15.26L24 4Z" fill="currentColor"/>
          </svg>
        </div>
        <h3>Premium Quality</h3>
        <p>Every product is carefully selected and tested to ensure the highest quality standards.</p>
      </div>
      
      <div class="feature-item animate-fade-in-up">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4C13.5 4 5 12.5 5 23S13.5 42 24 42S43 33.5 43 23S34.5 4 24 4ZM24 38C15.7 38 9 31.3 9 23S15.7 8 24 8S39 14.7 39 23S32.3 38 24 38Z" fill="currentColor"/>
            <path d="M24 12V23L31 30" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>Fast Delivery</h3>
        <p>Quick and reliable shipping worldwide. Get your orders delivered in record time.</p>
      </div>
      
      <div class="feature-item animate-fade-in-right">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
            <path d="M24 4C13.5 4 5 12.5 5 23S13.5 42 24 42S43 33.5 43 23S34.5 4 24 4ZM24 38C15.7 38 9 31.3 9 23S15.7 8 24 8S39 14.7 39 23S32.3 38 24 38Z" fill="currentColor"/>
            <path d="M24 12V23L31 30" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3>24/7 Support</h3>
        <p>Our dedicated support team is always ready to help you with any questions or concerns.</p>
      </div>
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
  <div class="page-width">
    <div class="newsletter-content">
      <div class="newsletter-text animate-fade-in-left">
        <h2>Stay Updated</h2>
        <p>Subscribe to our newsletter and be the first to know about new products, exclusive offers, and special promotions.</p>
      </div>
      
      <div class="newsletter-form animate-fade-in-right">
        {%- form 'customer', id: 'newsletter-form', class: 'form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="form-group">
            <input
              type="email"
              name="contact[email]"
              placeholder="Enter your email address"
              class="form__input"
              required
            >
            <button type="submit" class="button button--primary">
              Subscribe
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #0A0A0A;
    padding-top: 80px;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 20%, rgba(255, 107, 53, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 140, 66, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 60%, rgba(255, 107, 53, 0.05) 0%, transparent 50%);
    animation: particleFloat 20s ease-in-out infinite;
  }

  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(10, 10, 10, 0.9) 0%, 
      rgba(20, 20, 20, 0.8) 50%, 
      rgba(10, 10, 10, 0.9) 100%);
  }

  @keyframes particleFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(1deg); }
    66% { transform: translateY(10px) rotate(-1deg); }
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }


  /* Hero Title */
  .hero-title {
    margin-bottom: 2rem;
  }

  .title-line {
    display: block;
    font-family: 'Playfair Display', serif;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .title-line:first-child {
    font-size: 4rem;
    color: #FFFFFF;
    margin-bottom: 0.5rem;
  }

  .title-highlight {
    position: relative;
    font-size: 5rem;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FF6B35 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 3s ease-in-out infinite;
  }

  .title-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FF6B35 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: blur(20px);
    opacity: 0.5;
    z-index: -1;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Hero Subtitle */
  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 500px;
  }

  /* Hero Actions */
  .hero-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  /* Premium Buttons */
  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border: none;
    border-radius: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    min-height: 56px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
    color: #FFFFFF;
    box-shadow: 0 8px 32px rgba(255, 107, 53, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px rgba(255, 107, 53, 0.4);
  }

  .btn-primary:active {
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: #FFFFFF;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 107, 53, 0.5);
    transform: translateY(-2px);
  }

  .btn-text {
    position: relative;
    z-index: 2;
  }

  .btn-icon {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
  }

  .btn:hover .btn-icon {
    transform: translateX(4px);
  }

  .btn-ripple {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
  }

  .btn:active .btn-ripple {
    width: 200px;
    height: 200px;
  }

  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn:hover .btn-shine {
    left: 100%;
  }

  /* Hero Stats */
  .hero-stats {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-family: 'Inter', sans-serif;
    font-size: 1.5rem;
    font-weight: 800;
    color: #FF6B35;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 30px;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Hero Visual - Elegant Product Showcase */
  .hero-visual {
    position: relative;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .elegant-showcase {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 500px;
  }

  /* Main Product Display */
  .product-display {
    position: relative;
    margin-bottom: 3rem;
  }

  .product-frame {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto;
  }

  .product-image {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2D2D2D 0%, #1A1A1A 100%);
    border: 2px solid rgba(255, 107, 53, 0.3);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.4s ease;
  }

  .product-image:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 107, 53, 0.6);
    box-shadow: 0 30px 60px rgba(255, 107, 53, 0.2);
  }

  .product-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 140, 66, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-image:hover .product-glow {
    opacity: 1;
  }

  .product-pattern {
    position: absolute;
    top: 20px;
    left: 20px;
    right: 20px;
    bottom: 20px;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 3px,
      rgba(255, 107, 53, 0.1) 3px,
      rgba(255, 107, 53, 0.1) 6px
    );
    border-radius: 10px;
  }

  .product-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    box-shadow: 0 8px 20px rgba(255, 107, 53, 0.4);
  }

  .badge-text {
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    font-weight: 700;
    color: #FFFFFF;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Feature Highlights */
  .feature-highlights {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }

  .highlight-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 107, 53, 0.2);
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .highlight-item:hover {
    background: rgba(20, 20, 20, 0.8);
    border-color: rgba(255, 107, 53, 0.4);
    transform: translateX(10px);
  }

  .highlight-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
    flex-shrink: 0;
    box-shadow: 0 8px 20px rgba(255, 107, 53, 0.3);
  }

  .highlight-content h4 {
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 0.25rem;
  }

  .highlight-content p {
