{% comment %}
  Modern Homepage Template for MDamascus
{% endcomment %}

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-background">
    <div class="hero-overlay"></div>
    <div class="hero-pattern"></div>
  </div>
  
  <div class="hero-slideshow">
    <!-- Slide 1: Welcome -->
    <div class="hero-slide active">
      <div class="page-width">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="badge-text">ESTABLISHED 2020</span>
          </div>
          
          <h1 class="hero-title">
            <span class="title-primary">Premium Damascus Steel</span>
            <span class="title-secondary">Craftsmanship</span>
          </h1>
          
          <p class="hero-description">
            Experience the pinnacle of metallurgical artistry with our hand-forged Damascus steel collection. 
            Each piece represents centuries of tradition refined through modern precision.
          </p>
          
          <div class="hero-actions">
            <a href="{{ collections.all.url }}" class="btn btn-primary">
              <span>Explore Collection</span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            
            <a href="#featured" class="btn btn-outline">
              <span>View Featured</span>
            </a>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Slide 2: Chef Knives Collection -->
    <div class="hero-slide">
      <div class="page-width">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="badge-text">CHEF COLLECTION</span>
          </div>
          
          <h1 class="hero-title">
            <span class="title-primary">Professional Chef</span>
            <span class="title-secondary">Knives</span>
          </h1>
          
          <p class="hero-description">
            Precision-crafted chef knives that combine traditional Damascus steel techniques with modern ergonomics. 
            Perfect for professional kitchens and culinary enthusiasts.
          </p>
          
          <div class="hero-actions">
            <a href="{{ collections.chef-knives.url | default: collections.all.url }}" class="btn btn-primary">
              <span>Shop Chef Knives</span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 3: Collectible Swords -->
    <div class="hero-slide">
      <div class="page-width">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="badge-text">COLLECTIBLE SERIES</span>
          </div>
          
          <h1 class="hero-title">
            <span class="title-primary">Collectible</span>
            <span class="title-secondary">Swords & Axes</span>
          </h1>
          
          <p class="hero-description">
            Masterfully forged collectible weapons that showcase the beauty and strength of Damascus steel. 
            Each piece is a work of art, perfect for collectors and enthusiasts.
          </p>
          
          <div class="hero-actions">
            <a href="{{ collections.swords.url | default: collections.all.url }}" class="btn btn-primary">
              <span>View Collection</span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 4: Custom Craftsmanship -->
    <div class="hero-slide">
      <div class="page-width">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="badge-text">CUSTOM CRAFTED</span>
          </div>
          
          <h1 class="hero-title">
            <span class="title-primary">Bespoke</span>
            <span class="title-secondary">Craftsmanship</span>
          </h1>
          
          <p class="hero-description">
            Commission your own custom Damascus steel piece. Our master craftsmen work with you to create 
            a truly unique blade that reflects your vision and requirements.
          </p>
          
          <div class="hero-actions">
            <a href="/pages/custom-orders" class="btn btn-primary">
              <span>Start Custom Order</span>
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4.16667 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Slide Navigation -->
  <div class="hero-navigation">
    <div class="page-width">
      <div class="slide-dots">
        <button class="dot active" data-slide="0"></button>
        <button class="dot" data-slide="1"></button>
        <button class="dot" data-slide="2"></button>
        <button class="dot" data-slide="3"></button>
      </div>
      
      <div class="slide-arrows">
        <button class="arrow arrow-prev" aria-label="Previous slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="arrow arrow-next" aria-label="Next slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
  <div class="page-width">
    <div class="stats-grid">
      <div class="stat-item animate-fade-in-up">
        <div class="stat-number">100K+</div>
        <div class="stat-label">Happy Customers</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.1s;">
        <div class="stat-number">3K+</div>
        <div class="stat-label">Premium Products</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="stat-number">24/7</div>
        <div class="stat-label">Customer Support</div>
      </div>
      <div class="stat-item animate-fade-in-up" style="animation-delay: 0.3s;">
        <div class="stat-number">100%</div>
        <div class="stat-label">Satisfaction</div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section id="featured" class="featured-section">
  <div class="page-width">
    <div class="section-header">
      <h2 class="section-title">Featured Products</h2>
      <p class="section-subtitle">Discover our most popular and highly-rated products</p>
    </div>
    
    <div class="products-scroll-container">
      <div class="products-scroll">
        {%- assign featured_collection = collections.all -%}
        {%- if collections.featured.products.size > 0 -%}
          {%- assign featured_collection = collections.featured -%}
        {%- endif -%}
        {%- for product in featured_collection.products limit: 8 -%}
          <div class="product-card">
            <div class="product-image">
              {%- if product.featured_media -%}
                <a href="{{ product.url }}">
                  <img
                    src="{{ product.featured_media | image_url: width: 300 }}"
                    alt="{{ product.featured_media.alt | escape }}"
                    loading="lazy"
                    width="300"
                    height="300"
                  >
                </a>
              {%- else -%}
                <div class="product-placeholder">
                  <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
                    <rect width="60" height="60" rx="8" fill="#2D2D2D"/>
                    <path d="M20 20H40V40H20V20Z" stroke="#FF6B35" stroke-width="2" fill="none"/>
                    <path d="M25 25H35V35H25V25Z" fill="#FF6B35"/>
                  </svg>
                </div>
              {%- endif -%}
              
              <div class="product-badges">
                {%- if product.compare_at_price > product.price -%}
                  <span class="badge badge--sale">Sale</span>
                {%- endif -%}
                {%- if product.tags contains 'new' -%}
                  <span class="badge badge--new">New</span>
                {%- endif -%}
              </div>
              
              <div class="product-overlay">
                <a href="{{ product.url }}" class="product-link">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M15 3H21V9M21 3L9 15M21 3V9H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              </div>
            </div>
            
            <div class="product-info">
              <h3 class="product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              <div class="product-price">
                {%- if product.compare_at_price > product.price -%}
                  <span class="price price--sale">{{ product.price | money }}</span>
                  <span class="price price--compare">{{ product.compare_at_price | money }}</span>
                {%- else -%}
                  <span class="price">{{ product.price | money }}</span>
                {%- endif -%}
              </div>
              
              <div class="product-rating">
                <div class="stars">
                  <span>★★★★★</span>
                </div>
                <span class="rating-count">({{ product.metafields.reviews.rating_count | default: '24' }})</span>
              </div>
              
              <div class="product-actions">
                <a href="{{ product.url }}" class="btn btn-primary btn-sm">View Details</a>
              </div>
            </div>
          </div>
        {%- endfor -%}
        
        {%- if featured_collection.products.size == 0 -%}
          <div class="no-products-message">
            <div class="no-products-icon">
              <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
                <path d="M32 8C18.745 8 8 18.745 8 32S18.745 56 32 56S56 45.255 56 32S45.255 8 32 8ZM32 52C21.523 52 12 42.477 12 32S21.523 12 32 12S52 21.523 52 32S42.477 52 32 52Z" fill="currentColor"/>
                <path d="M32 20V32L40 36" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <h3>Products Coming Soon</h3>
            <p>We're preparing amazing products for you. Check back soon!</p>
          </div>
        {%- endif -%}
      </div>
      
      <!-- Scroll Indicators -->
      <div class="scroll-indicators">
        <button class="scroll-btn scroll-left" aria-label="Scroll left">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="scroll-btn scroll-right" aria-label="Scroll right">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M7.5 5L12.5 10L7.5 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
    
    {%- if featured_collection.products.size > 0 -%}
      <div class="section-footer">
        <a href="{{ featured_collection.url }}" class="button button--secondary">
          View All Products
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

